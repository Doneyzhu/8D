@using _8DManagementSystem.Controllers
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">BOSCH 8D Report</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class=""><a href="@Url.Content("~/Home/")">Home</a></li>
                @if (ViewBag.UserView != null)
                { 
                    <li class="dropdown ">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">8D Workflow <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Content("~/EightDReport/")">ALL</a></li>
                            @if (ViewBag.UserView.Boards.Count > 0)
                            {
                                foreach (var item in ViewBag.UserView.Boards)
                                {
                                <li><a href="@Url.Content("~/EightDReport/Index?" + item.BoardGuid + "")">@item.BoardName</a></li>  
                                }
                            }
                        </ul>
                    </li>

                            if (ViewBag.UserView.IsAdmin)
                            {
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administration<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li class="dropdown-header">User center</li>
                            <li><a href="@Url.Content("~/UserCenter/")">Users</a></li>
                            <li><a href="@Url.Content("~/Board/")">8D Board Manage</a></li>
                            <li><a href="@Url.Content("~/Role/")">Roles Manage</a></li>
                            @*<li><a href="@Url.Content("~/Department/")">Departments</a></li>*@
                            <li class="divider"></li>
                            <li class="dropdown-header">Configuration</li>
                            @*<li><a href="#">Enumerations</a></li>*@
                            <li><a href="@Url.Content("~/DataDictionary/")">Dictionary</a></li>
                            @*<li><a href="@Url.Content("~/Language/")">Languages</a></li>*@
                            <li><a href="#">Settings</a></li>
                        </ul>
                    </li>
                            }

                }
                <li><a href="#contact">Help</a></li>
            </ul>
            <ul class="navbar-right nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Html.Raw(ViewBag.UserView == null ? "Signed in" : "Welcome " + ViewBag.UserView.UserName) <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        @if (ViewBag.UserView == null)
                        {
                            <li><a href="#">My account</a></li>
                            <li><a href="@Url.Content("~/Login")">Sign In</a></li>
                        }
                        else
                        {
                            <li><a href="@Url.Content("~/Login/LogOut")">Sign Out</a></li>
                        }
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>
